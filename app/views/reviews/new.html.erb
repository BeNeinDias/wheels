<!-- Form to require params for review.  Permissions: Title content and rating -->
<div class="row">
  <div class="col-xs-12 col-sm-6 col sm offset-4">
    <%= simple_form_for [@booking, @review] do |f| %>
      <div class="form-row form-row-last">
        <%= f.input :title %>
      </div>
      <div class="form-row form-row-last">
        <%= f.input :content, placeholder: "Maximum 500 characters" %>
      </div>
      <div class="form-row form-row-last">
          <%= f.input :rating, placeholder: "From 1 to 5"  %>
      </div>
      <div class="form-submit">
        <%= f.submit "Add a review", id: "sweet-alert-demo", class: "btn btn-success" %>
      </div>
    <% end %>
  </div>
</div>
